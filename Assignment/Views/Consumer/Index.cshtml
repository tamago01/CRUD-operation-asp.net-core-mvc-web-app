@model List<Assignment.Models.Domain.Consumer>


    <h1>Consumers</h1>

    <table class="table"
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var consumer in Model)
            {
            <tr>
                <td>@consumer.Id</td>
                    <td>@consumer.FirstName</td>
                        <td>@consumer.LastName</td>
                            <td>@consumer.Address</td>
                                <td>@consumer.Email</td>
                                <td><a href="Consumer/View/@consumer.Id">View</a></td>
            </tr>
        }
        </tbody>